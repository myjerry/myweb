<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" 
					width="100%" height="100%"
					label="Projects" >
	<s:layout>
		<s:HorizontalLayout/>
	</s:layout>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.collections.ArrayList;
			
			import org.myjerry.myweb.ApplicationContext;
			import org.myjerry.myweb.model.Project;
			import org.myjerry.myweb.model.Template;
			
			private var currentlyLoadedProject:Project;
			
			override protected function initializationComplete():void {
				super.initializationComplete();
				
				
			}
			
			protected function saveProject():void {
				var project:Project = null;
				
				if(currentlyLoadedProject == null) {
					project = new Project();
				} else {
					project = currentlyLoadedProject;
				}
				
				project.name = this.projectName.text;
				project.description = this.description.text;
				project.summary = this.summary.text;
				
				var success:Boolean = ApplicationContext.site.projectService.saveProject(project);
				if(success) {
					currentlyLoadedProject = project;
				}
			}
		]]>
	</fx:Script>
	
	<s:VGroup height="100%" width="200">
		<s:List width="100%" height="100%" id="projectList" labelField="name" />
		
		<s:Button label="Load" />
	</s:VGroup>
	
	<s:VGroup width="100%" height="100%">
		<s:Label text="Name" />
		<s:TextInput width="100%" id="projectName" />
		
		<s:Spacer height="20" />
		
		<s:Label text="Description" id="description" />
		<s:TextInput width="100%" />
		
		<s:Spacer height="20" />
		
		<s:Label text="Language" />
		<s:ComboBox width="100%" id="language" />
		
		<s:Spacer height="20" />
		
		<s:Label text="Host" />
		<s:ComboBox width="100%" id="projectHost" />
		
		<s:Spacer height="20" />
		
		<s:Label text="Summary" />
		<s:TextArea width="100%" height="100%" id="summary" />
		
		<s:HGroup width="100%" >
			<s:Spacer width="100%" />
			
			<s:Button label="Save" click="saveProject();" />
			<s:Button label="Save As" />
			<s:Button label="Cancel/Reset" />
		</s:HGroup>
		
	</s:VGroup>
	
</s:NavigatorContent>
