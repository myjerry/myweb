<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" 
					width="100%" height="100%"
					label="Languages">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import org.myjerry.myweb.ApplicationContext;
			import org.myjerry.myweb.model.Language;
			
			protected function saveLanguage():void {
				var lang:Language = new Language();
				
				lang.name = this.langName.text;
				lang.extensions = this.extensions.text;
				
				ApplicationContext.site.languageService.saveLanguage(lang);
			}
		]]>
	</fx:Script>
	
	<s:layout>
		<s:HorizontalLayout />
	</s:layout>
	
	<s:List id="langList" width="100%" height="100%">
		
	</s:List>
	
	<s:Form id="languageForm" width="100%">
		<s:FormHeading label="Language Details" />
		
		<s:FormItem label="Name">
			<s:TextInput id="langName" />
		</s:FormItem>
		
		<s:FormItem label="Source Extensions">
			<s:TextInput id="extensions" />
		</s:FormItem>
	</s:Form>
	
	<s:HGroup width="100%" height="100%" >
		<s:Button label="Load" />
		<s:Button label="Delete" />
		
		<s:Spacer width="100%" />
		
		<s:Button label="Save" click="saveLanguage()" />
		<s:Button label="Save As" />
		<s:Button label="Reset" />
	</s:HGroup>
	
</s:NavigatorContent>
