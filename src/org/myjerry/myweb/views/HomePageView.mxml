<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="100%" height="100%">
	
	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			
			import org.myjerry.as3extensions.io.FileChooser;
			import org.myjerry.myweb.ApplicationContext;
			import org.myjerry.myweb.model.Project;
			
			private function createNewProject():void {
				ApplicationContext.pushView(new CreateProjectView());
			}
			
			private function openProject():void {
				new FileChooser('Choose the project file...', fileChosen).choose();
			}
			
			private function fileChosen(file:File):void {
				Project.openProject(file);
			}
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:Button label="Create Project..." click="createNewProject()" />
	
	<s:Button label="Open Project" click="openProject()" />
	
</s:Group>
